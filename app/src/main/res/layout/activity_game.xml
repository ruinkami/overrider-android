<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.ruinkami.overrider.activity.GameActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@null">
        <LinearLayout
            android:id="@+id/layout_phase"
            android:layout_width="@dimen/layout_phase_width"
            android:layout_height="@dimen/layout_phase_height"
            android:layout_margin="@dimen/layout_margin_default"
            android:background="#ffb1c3b0"
            android:layout_centerInParent="true"
            android:orientation="horizontal"></LinearLayout>
        <LinearLayout
            android:id="@+id/layout_cell_2"
            android:layout_width="@dimen/layout_card_field_width"
            android:layout_height="@dimen/layout_card_field_height"
            android:layout_margin="@dimen/layout_margin_default"
            android:background="#ffc3aa84"
            android:layout_above="@id/layout_phase"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"></LinearLayout>
        <LinearLayout
            android:id="@+id/layout_cell_5"
            android:layout_width="@dimen/layout_card_field_width"
            android:layout_height="@dimen/layout_card_field_height"
            android:layout_margin="@dimen/layout_margin_default"
            android:background="#ffc3aa84"
            android:layout_below="@id/layout_phase"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"></LinearLayout>
        <LinearLayout
            android:id="@+id/layout_cell_1"
            android:layout_width="@dimen/layout_card_field_width"
            android:layout_height="@dimen/layout_card_field_height"
            android:layout_margin="@dimen/layout_margin_default"
            android:background="#ffc3aa84"
            android:layout_above="@id/layout_phase"
            android:layout_toLeftOf="@id/layout_cell_2"
            android:orientation="horizontal"></LinearLayout>
        <LinearLayout
            android:id="@+id/layout_cell_3"
            android:layout_width="@dimen/layout_card_field_width"
            android:layout_height="@dimen/layout_card_field_height"
            android:layout_margin="@dimen/layout_margin_default"
            android:background="#ffc3aa84"
            android:layout_above="@id/layout_phase"
            android:layout_toRightOf="@id/layout_cell_2"
            android:orientation="horizontal"></LinearLayout>
        <LinearLayout
            android:id="@+id/layout_cell_4"
            android:layout_width="@dimen/layout_card_field_width"
            android:layout_height="@dimen/layout_card_field_height"
            android:layout_margin="@dimen/layout_margin_default"
            android:background="#ffc3aa84"
            android:layout_below="@id/layout_phase"
            android:layout_toLeftOf="@id/layout_cell_5"
            android:orientation="horizontal"></LinearLayout>
        <LinearLayout
            android:id="@+id/layout_cell_6"
            android:layout_width="@dimen/layout_card_field_width"
            android:layout_height="@dimen/layout_card_field_height"
            android:layout_margin="@dimen/layout_margin_default"
            android:background="#ffc3aa84"
            android:layout_below="@id/layout_phase"
            android:layout_toRightOf="@id/layout_cell_5"
            android:orientation="horizontal"></LinearLayout>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@null">
        <LinearLayout
            android:id="@+id/layout_p1_card_list"
            android:layout_width="@dimen/layout_card_handlist_width"
            android:layout_height="@dimen/layout_card_handlist_height"
            android:layout_marginBottom="20dp"
            android:background="#ffc36e80"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"></LinearLayout>
        <LinearLayout
            android:id="@+id/layout_p2_card_list"
            android:layout_width="@dimen/layout_card_handlist_width"
            android:layout_height="@dimen/layout_card_handlist_height"
            android:layout_marginTop="20dp"
            android:background="#ffc36e80"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"></LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@null">
        <LinearLayout
            android:id="@+id/layout_p1_avatar"
            android:layout_width="@dimen/layout_avatar_length"
            android:layout_height="@dimen/layout_avatar_length"
            android:background="#ff68a9c3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"></LinearLayout>
        <LinearLayout
            android:id="@+id/layout_p1_info"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/layout_info_height"
            android:background="#ff5cc3a0"
            android:layout_toRightOf="@id/layout_p1_avatar"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"></LinearLayout>
        <LinearLayout
            android:id="@+id/layout_p2_avatar"
            android:layout_width="@dimen/layout_avatar_length"
            android:layout_height="@dimen/layout_avatar_length"
            android:background="#ff68a9c3"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"></LinearLayout>
        <LinearLayout
            android:id="@+id/layout_p2_info"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/layout_info_height"
            android:background="#ff5cc3a0"
            android:layout_toLeftOf="@id/layout_p2_avatar"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"></LinearLayout>
        </RelativeLayout>

</FrameLayout>
